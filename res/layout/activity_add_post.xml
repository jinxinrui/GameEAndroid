<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <EditText
                android:id="@+id/addTitleText"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:layout_below="@+id/textView10"
                android:imeOptions="actionDone" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Console System"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="94dp"
                android:padding="8dp"
                android:layout_below="@+id/addTitleText" />
            <Spinner
                android:id="@+id/systemSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:entries="@array/consoleSystemOptions"
                android:layout_below="@id/textView8" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Region"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="156dp"
                android:padding="8dp"
                android:layout_below="@id/systemSpinner" />

            <Spinner
                android:id="@+id/regionSpinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="200dp"
                android:entries="@array/regionOptions"
                android:layout_below="@+id/textView11"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="245dp"
                android:padding="8dp"
                android:layout_below="@id/regionSpinner"/>

            <EditText
                android:id="@+id/addPriceText"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="84dp"
                tools:layout_editor_absoluteY="245dp"
                android:paddingLeft="8dp"
                android:layout_below="@id/textView12"
                android:imeOptions="actionDone" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scratches"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="306dp"
                android:padding="8dp"
                android:layout_below="@id/addPriceText" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With Case"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="354dp"
                android:padding="8dp"
                android:layout_below="@+id/checkBox1" />
            <!--<Button-->
                <!--android:id="@+id/browseButton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Browse Photo"-->
                <!--android:padding="8dp"-->
                <!--android:layout_below="@id/checkBox2"-->
                <!--android:layout_centerInParent="true"/>-->

            <ImageView
                android:id="@+id/addPostPhoto"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                android:layout_below="@id/checkBox2"/>
            <!--<Button-->
                <!--android:id="@+id/uploadButton"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="Upload Photo"-->
                <!--android:layout_below="@id/addPostPhoto"/>-->

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textSize="24sp"
                android:padding="8dp"
                android:layout_below="@id/addPostPhoto"/>

            <EditText
                android:id="@+id/addDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:padding="8dp"
                android:layout_below="@id/textView7"
                android:imeOptions="actionDone" />

        </RelativeLayout>


    </ScrollView>



</android.support.constraint.ConstraintLayout>